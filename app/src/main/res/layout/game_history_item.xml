<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="@dimen/default_margin"
    >

    <TextView
        android:id="@+id/game_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/default_margin"
        style="@style/MinTextStyle"
        />

    <TextView
        android:id="@+id/title_players_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_players_game"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="@dimen/default_padding"
        style="@style/MinTextStyle"
        />

    <TextView
        android:id="@+id/players_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_players_game"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/title_players_game"
        android:layout_marginLeft="@dimen/item_margin"
        style="@style/MinTextStyle"
        />

    <TextView
        android:id="@+id/title_game_turn_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_number_turn"
        app:layout_constraintEnd_toStartOf="@+id/game_turn_number"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/MinTextStyle"/>

    <TextView
        android:id="@+id/game_turn_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/MinTextStyle"
        android:layout_marginRight="@dimen/default_padding"/>


</androidx.constraintlayout.widget.ConstraintLayout>